{
  "name": "comfortable-atcoder",
  "description": "Atcoderを快適にするChrome拡張",
  "version": "0.0.0-development",
  "dependencies": {},
  "devDependencies": {
    "less-watch-compiler": "1.11.3",
    "npm-run-all": "4.1.3",
    "uglify-js": "3.4.9",
    "xo": "0.23.0"
  },
  "engines": {
    "node": "8.9.4",
    "npm": "6.3"
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:xo": "xo src/*.js",
    "build:init": "rm -rf dist && mkdir dist",
    "build:cp": "cp -r src dist && rm -rf dist/**/*.less",
    "build:uglify": "cd src; for js in `ls *.js`; do uglifyjs --compress --mangle -o ../dist/$js -- $js; done",
    "watch": "run-p watch:*",
    "watch:less": "less-watch-compiler src src"
  },
  "eslintIgnore": [
    "dist",
    "src/lib"
  ],
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "semi": 2,
      "strict": 2,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-extra-boolean-cast": 2,
      "no-extra-semi": 2,
      "no-func-assign": 2,
      "no-invalid-regexp": 2,
      "no-prototype-builtins": 2,
      "no-template-curly-in-string": 1,
      "no-unexpected-multiline": 2,
      "no-unreachable": 1,
      "no-unsafe-finally": 1,
      "use-isnan": 2,
      "valid-typeof": 2,
      "block-scoped-var": 2,
      "complexity": 1,
      "consistent-return": 1,
      "eqeqeq": 2,
      "guard-for-in": 1,
      "no-caller": 1,
      "no-div-regex": 2,
      "no-else-return": 2,
      "no-empty-function": 1,
      "no-empty-pattern": 2,
      "no-eq-null": 2,
      "no-extend-native": 2,
      "no-extra-bind": 2,
      "no-extra-label": 1,
      "no-implicit-coercion": 1,
      "no-implied-eval": 2,
      "no-labels": 2,
      "no-magic-numbers": 1,
      "no-multi-spaces": 1,
      "no-new-func": 2,
      "no-new-wrappers": 2,
      "no-redeclare": 1,
      "no-script-url": 1,
      "no-self-assign": 1,
      "no-self-compare": 2,
      "no-throw-literal": 2,
      "no-useless-call": 2,
      "no-useless-concat": 2,
      "no-useless-escape": 2,
      "no-useless-return": 2,
      "no-void": 2,
      "no-warning-comments": 1,
      "no-with": 2,
      "no-delete-var": 1,
      "no-catch-shadow": 1,
      "no-restricted-globals": 2,
      "no-shadow-restricted-names": 2,
      "no-shadow": 1,
      "no-undef": 2,
      "no-unused-vars": 2,
      "no-use-before-define": 2,
      "array-bracket-spacing": 2,
      "camelcase": 2,
      "comma-spacing": 2,
      "eol-last": 2,
      "func-call-spacing": 2,
      "func-name-matching": 1,
      "linebreak-style": 2,
      "no-tabs": 1,
      "no-trailing-spaces": 2,
      "no-underscore-dangle": 2,
      "operator-assignment": 2,
      "spaced-comment": 2,
      "unicode-bom": 2,
      "arrow-spacing": 2,
      "arrow-body-style": 2,
      "no-const-assign": 2,
      "no-dupe-class-members": 2,
      "no-duplicate-imports": 1,
      "no-var": 1,
      "prefer-spread": 2,
      "prefer-rest-params": 2,
      "prefer-const": 2,
      "sort-imports": 2,
      "prefer-template": 1
    },
    "parserOptions": {
      "ecmaVersion": 6
    }
  }
}
