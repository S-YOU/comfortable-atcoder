{
  "name": "comfortable-atcoder",
  "description": "Atcoderを快適にするChrome拡張",
  "dependencies": {},
  "devDependencies": {
    "less-watch-compiler": "1.11.3",
    "npm-run-all": "4.1.3",
    "semantic-release": "15.9.15",
    "uglify-es": "3.3.9",
    "xo": "0.23.0"
  },
  "engines": {
    "node": "10",
    "npm": "6.3"
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:xo": "xo src/*.js",
    "build:init": "rm -rf dist && mkdir dist",
    "build:cp": "cp -r src dist && rm -rf dist/**/*.less",
    "build:uglify": "cd src; for js in `ls *.js`; do uglifyjs --compress --mangle -o ../dist/$js -- $js; done",
    "watch": "run-p watch:*",
    "watch:less": "less-watch-compiler src src",
    "package": "npm run build && zip -rq Release.zip dist"
  },
  "eslintIgnore": [
    "dist",
    "src/lib"
  ],
  "xo": {
    "envs": ["es6"],
    "space": true,
    "strict": true,
    "rules": {
      "no-await-in-loop": 0,
      "no-undef": 0,
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    }
  }
}
