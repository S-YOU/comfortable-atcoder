{
  "name": "comfortable-atcoder",
  "description": "Atcoderを快適にするChrome拡張",
  "version": "0.0.0-development",
  "dependencies": {},
  "devDependencies": {
    "less-watch-compiler": "1.11.3",
    "npm-run-all": "4.1.3",
    "uglify-js": "3.4.9",
    "xo": "0.23.0"
  },
  "engines": {
    "node": "8.9.4",
    "npm": "6.3"
  },
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:xo": "xo src/*.js",
    "build:init": "rm -rf dist && mkdir dist",
    "build:cp": "cp -r src dist && rm -rf dist/**/*.less",
    "build:uglify": "cd src; for js in `ls *.js`; do uglifyjs --compress --mangle -o ../dist/$js -- $js; done",
    "watch": "run-p watch:*",
    "watch:less": "less-watch-compiler src src"
  },
  "eslintIgnore": [
    "dist",
    "src/lib"
  ],
  "xo": {
    "space": true,
    "strict": true,
    "rules": {
      "no-undef": 0,
      "comma-dangle": ["error", "always-multiline"]
    },
    "parserOptions": {
      "ecmaVersion": 6
    }
  }
}
